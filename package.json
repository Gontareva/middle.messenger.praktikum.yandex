{
	"name": "middle.messenger.praktikum.yandex",
	"version": "1.0.0",
	"description": "Проект доступен по адресу: https://amazing-tereshkova-cec837.netlify.app",
	"main": "server.ts",
	"dependencies": {
		"express": "^4.17.1",
		"pug-cli": "^1.0.0-alpha6",
		"scss": "^0.2.4",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"parcel-bundler": "^1.12.5",
		"pug": "^3.0.2",
		"sass": "^1.32.8",
		"typescript": "^4.2.4"
	},
	"scripts": {
		"clientBuild": "pug -O '{module: true}' -c --no-debug -s --name-after-file -o dist/templates static/components/*/*.template.pug && pug -O '{module: true}' -c --no-debug -s --name-after-file -o dist/pages static/pages/*/*.template.pug",
		"cleanup": "rm -rf .cache dist",
		"test": "echo \"Error: no test specified\" && exit 1",
		"parcelStart": "parcel -p 3001 static/index.pug static/pages/* --no-cache",
		"parcelBuild": "parcel build static/index.pug static/pages/*/index.ts --no-cache --log-level 0",
		"fullStart": "npm run clientBuild && npm run parcelBuild && node server.ts",
		"start": "npm run clientBuild && npm run parcelBuild && node server.ts",
		"lint": "eslint --ext js,ts -- './' && stylelint --syntax scss -- './**.scss'",
		"lintJsFix": "eslint --ext js,ts --cache --fix -- './'",
		"lintSCSSFix": "stylelint --syntax scss --fix -- './**.scss'",
		"lintFix": "nrun lintJsFix && nrun lintSCSSFix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Gontareva/middle.messenger.praktikum.yandex.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Gontareva/middle.messenger.praktikum.yandex/issues"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged --quiet"
		}
	},
	"lint-staged": {
		"*.js,*.ts": "eslint --quiet",
		"*.scss": "stylelint --syntax scss"
	},
	"homepage": "https://github.com/Gontareva/middle.messenger.praktikum.yandex#readme",
	"keywords": []
}
