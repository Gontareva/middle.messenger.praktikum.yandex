extends components/layout/layout

include components/formInput/formInput

block params
    - title = 'Изменить пароль';

block content
    .page
        .page__control
            include components/layout/backButton
            +backButton()
        .page__body

            form.form.page__form.page__form_default(onsubmit='window.savePassword(this); return false;')
                .form__avatar
                    include components/avatar/avatar
                    +avatar('')

                .form__body.list.list_line
                    +formInput({
                        classes: ['list__item'],
                        title: 'Старый пароль',
                        type: 'password',
                        name: 'oldPassword'
                    })

                    +formInput({
                        classes: ['list__item'],
                        title: 'Новый пароль',
                        type: 'password',
                        name: 'newPassword'
                    })

                    +formInput({
                        classes: ['list__item'],
                        title: 'Повторите новый пароль',
                        type: 'password',
                        name: 'check'
                    })

                .form__footer.form__footer_narrow
                    button.button.button_primary.button_stretch(type='submit') Сохранить
